{
    "name": "sown",
    "version": "1.0.0",
    "author": {
        "name": "Sean"
    },
    "description": "Emulate the WiiPown experience",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build-prod": "ng build --prod",
        "test": "ng test",
        "lint": "ng lint",
        "lint-check": "ng lint",
        "lint-write": "ng lint --fix",
        "prettify-check": "prettier --config ./.prettierrc --list-different \"src/{app,environments}/**/*{.ts,.js,.json,.css,.scss}\"",
        "prettify-write": "prettier --config ./.prettierrc --write \"src/{app,environments}/**/*{.ts,.js,.json,.css,.scss}\"",
        "cleanup": "npm run prettify-write; npm run lint-write",
        "e2e": "ng e2e",
        "electron": "electron .",
        "electron-build": "electron-builder build -lw",
        "electron-build-lin": "electron-builder build -l",
        "electron-build-win": "electron-builder build -w"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~11.1.1",
        "@angular/common": "~11.1.1",
        "@angular/compiler": "~11.1.1",
        "@angular/core": "~11.1.1",
        "@angular/forms": "~11.1.1",
        "@angular/platform-browser": "~11.1.1",
        "@angular/platform-browser-dynamic": "~11.1.1",
        "@angular/router": "~11.1.1",
        "rxjs": "~6.6.0",
        "tslib": "^2.0.0",
        "zone.js": "~0.11.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.1101.2",
        "@angular/cli": "~11.1.2",
        "@angular/compiler-cli": "~11.1.1",
        "@types/jasmine": "~3.6.0",
        "@types/node": "^12.11.1",
        "codelyzer": "^6.0.0",
        "electron": "^11.2.1",
        "electron-builder": "^22.9.1",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~5.2.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "prettier": "^2.2.1",
        "protractor": "~7.0.0",
        "ts-node": "~8.3.0",
        "tslint": "~6.1.0",
        "typescript": "~4.1.2"
    },
    "main": "electron-main.js"
}
